<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VietCar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">#c53a00</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B2401C</item>
    </style>

<!--    <style name="Theme.VietCar" parent="Base.Theme.VietCar" />-->

    <style name="BottomNavigationTextActive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="RadioButtonStyle" parent="Theme.MaterialComponents.Light" >
        
        <item name="colorAccent">#C50B0B</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>
</resources>